<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dateType"
            type="org.edx.mobile.model.course.CourseDateBlock" />

        <variable
            name="listener"
            type="org.edx.mobile.interfaces.OnDateBlockListener" />

        <variable
            name="list"
            type="java.util.ArrayList&lt;org.edx.mobile.model.course.CourseDateBlock&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">


        <View
            android:id="@+id/above_line_dot"
            android:layout_width="@dimen/date_hairline"
            android:layout_height="0dp"
            android:background="@drawable/black_line_vertical"
            app:layout_constraintBottom_toTopOf="@+id/dot"
            app:layout_constraintEnd_toEndOf="@+id/dot_today"
            app:layout_constraintStart_toStartOf="@+id/dot_today"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dot"
            android:layout_width="@dimen/dot_width"
            android:layout_height="@dimen/dot_height"
            app:layout_constraintBottom_toBottomOf="@id/dot_today"
            app:layout_constraintEnd_toEndOf="@id/dot_today"
            app:layout_constraintStart_toStartOf="@+id/dot_today"
            app:layout_constraintTop_toTopOf="@id/dot_today"
            binding:dotBackground="@{dateType.getDateTypeTag()}"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/dot_today"
            android:layout_width="@dimen/current_dot_width"
            android:layout_height="@dimen/current_dot_height"
            android:layout_marginStart="@dimen/edx_half_margin"
            android:layout_marginTop="@dimen/widget_margin_half"
            android:layout_marginEnd="@dimen/edx_half_margin"
            android:background="@drawable/yellow_circle_black_border"
            android:translationZ="90dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            binding:isVisible="@{dateType.getToday()}"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <View
            android:id="@+id/below_line_dot"
            android:layout_width="@dimen/date_hairline"
            android:layout_height="0dp"
            android:background="@drawable/black_line_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/date_info_container"
            app:layout_constraintEnd_toEndOf="@+id/dot_today"
            app:layout_constraintStart_toStartOf="@+id/dot_today"
            app:layout_constraintTop_toBottomOf="@+id/dot" />

        <LinearLayout
            android:id="@+id/date_info_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/edx_margin"
            android:paddingBottom="@dimen/edx_double_margin"
            binding:addView="@{list}"
            binding:clickListener="@{listener}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dot"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{dateType.getDate()}"
                    android:textColor="@color/switch_text_color"
                    android:textSize="@dimen/edx_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/edx_half_margin"
                    android:layout_marginBottom="@dimen/widget_margin_half"
                    android:drawablePadding="@dimen/widget_margin_half"
                    android:paddingStart="@dimen/edx_half_margin"
                    android:paddingTop="3dp"
                    android:paddingEnd="@dimen/edx_half_margin"
                    android:paddingBottom="3dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/edx_small"
                    binding:dateBackground="@{dateType.getDateTypeTag()}"
                    tools:visibility="visible" />

            </LinearLayout>

<!--            <TextView-->
<!--                android:id="@+id/title"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@{dateType.title}"-->
<!--                android:textColor="@color/switch_text_color"-->
<!--                android:textSize="@dimen/edx_base"-->
<!--                android:textStyle="bold"-->
<!--                binding:isUserHasAccess="@{dateType.getDateTypeTag()}" />-->

<!--            <TextView-->
<!--                android:id="@+id/description"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@{dateType.description}"-->
<!--                android:textColor="@color/switch_text_color"-->
<!--                android:textSize="@dimen/edx_small"-->
<!--                binding:isUserHasAccess="@{dateType.getDateTypeTag}" />-->

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>